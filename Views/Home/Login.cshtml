<h1>Iniciar Sesion</h1>
<form method="POST" asp-action="Login" asp-controller="Home">
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Ingresa tu email" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Usuario</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="nombre" placeholder="Ingresa tu nombre de usuario" required>
    </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
    </div>
</form>